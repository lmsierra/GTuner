<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context=".GTuner">

    <RelativeLayout
        android:id="@+id/nota_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <TextView

            android:id="@+id/nota"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"

            android:background="@drawable/nota_background"

            android:text="@string/empty"
            android:textSize="35sp"
            android:textStyle="bold"
            android:gravity="center"

            android:clickable="true"
            android:longClickable="true"
            android:onClick="changeNotation"
            />

        <TextView
            android:id="@+id/freq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="100dp"
            android:text=""
            android:textSize="25sp"
            android:gravity="center"
            />

        <!-- Indicadores izquierdos-->

        <ImageView
            android:id="@+id/indicador_izquierda_5"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/nota"
            android:layout_alignTop="@+id/nota"
            android:layout_marginLeft="-45dp"
            android:layout_centerVertical="true"
            android:background="@drawable/indicador"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/indicador_izquierda_4"
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/nota"
            android:layout_alignTop="@+id/nota"
            android:layout_marginLeft="-90dp"
            android:src="@drawable/indicador"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/indicador_izquierda_3"
            android:layout_width="27dp"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/nota"
            android:layout_alignTop="@+id/nota"
            android:layout_marginLeft="-125dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:src="@drawable/indicador"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/indicador_izquierda_2"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/nota"
            android:layout_marginLeft="-152dp"
            android:src="@drawable/indicador"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/indicador_izquierda_1"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/nota"
            android:layout_marginLeft="-174dp"
            android:src="@drawable/indicador"
            android:visibility="visible"
            />



        <!-- Indicadores derechos -->

        <ImageView
            android:id="@+id/indicador_derecha_5"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:layout_alignRight="@+id/nota"
            android:layout_marginRight="-45dp"
            android:layout_centerVertical="true"
            android:background="@drawable/indicador"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/indicador_derecha_4"
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:layout_alignRight="@+id/nota"
            android:layout_marginRight="-90dp"
            android:src="@drawable/indicador"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/indicador_derecha_3"
            android:layout_width="27dp"
            android:layout_height="match_parent"
            android:layout_alignRight="@+id/nota"
            android:layout_marginRight="-125dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:src="@drawable/indicador"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/indicador_derecha_2"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_alignRight="@+id/nota"
            android:layout_marginRight="-152dp"
            android:src="@drawable/indicador"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/indicador_derecha_1"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_alignRight="@+id/nota"
            android:layout_marginRight="-174dp"
            android:src="@drawable/indicador"
            android:visibility="visible"
            />

    </RelativeLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="640dp"
        android:layout_height="50dp"
        android:layout_gravity="center|bottom"
        ads:adUnitId="@string/AD_UNIT_ID"
        ads:adSize="BANNER"/>
</LinearLayout>

